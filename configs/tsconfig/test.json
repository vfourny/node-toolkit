{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    /* Types */
    "types": ["vitest/globals"],

    /* Modules */
    "baseUrl": "${configDir}",
    "paths": {
      "@/*": ["${configDir}/src/*"]
    },

    /* Emit */
    "noEmit": true
  },
  "include": ["${configDir}/tests/**/*"],
  "exclude": ["${configDir}/node_modules", "${configDir}/dist"]
}
