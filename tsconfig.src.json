{
  "extends": "./configs/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist/libs",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo-src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", ".nuxt", ".output"]
}
