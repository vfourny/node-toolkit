{
  "name": "@vfourny/node-toolkit",
  "version": "1.0.17",
  "description": "Toolkit for Node.js projects",
  "type": "module",
  "main": "dist/libs/index.js",
  "types": "dist/libs/index.d.ts",
  "private": false,
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "files": [
    "tsconfig.base.json",
    "dist"
  ],
  "exports": {
    "./eslint": {
      "types": "./dist/eslint.config.d.ts",
      "default": "./dist/eslint.config.js"
    },
    "./prettier": {
      "types": "./dist/prettier.config.d.ts",
      "default": "./dist/prettier.config.js"
    },
    "./commitlint": {
      "types": "./dist/commitlint.config.d.ts",
      "default": "./dist/commitlint.config.js"
    },
    "./release": {
      "types": "./dist/release.config.d.ts",
      "default": "./dist/release.config.js"
    },
    "./tsconfig": "./tsconfig.base.json"
  },
  "keywords": [
    "eslint",
    "prettier",
    "commitlint",
    "semantic-release",
    "formatting",
    "linting",
    "typescript"
  ],
  "author": "Valentin Fourny",
  "license": "ISC",
  "dependencies": {
    "@commitlint/config-angular": "^19.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.3.0",
    "typescript-eslint": "^8.0.0"
  },
  "devDependencies": {
    "@commitlint/types": "^19.8.0",
    "@eslint/js": "^9.4.0",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.0.0",
    "commitlint": "^19.8.0",
    "eslint": "^9.3.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "semantic-release": "^24.0.0",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "commitlint": "^19.8.0",
    "eslint": "^9.3.0",
    "prettier": "^3.2.5",
    "semantic-release": "^24.0.0",
    "typescript": "^5.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vfourny/node-toolkit.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20.13 <23",
    "npm": ">= 10"
  }
}
