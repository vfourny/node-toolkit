{
  "name": "@vfourny/node-toolkit",
  "version": "1.1.0",
  "description": "Toolkit for Node.js projects",
  "type": "module",
  "main": "dist/libs/index.js",
  "types": "dist/libs/index.d.ts",
  "private": false,
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "files": [
    "tsconfig.base.json",
    "dist"
  ],
  "exports": {
    "./eslint": {
      "types": "./dist/configs/eslint/index.d.ts",
      "default": "./dist/configs/eslint/index.js"
    },
    "./eslint/base": {
      "types": "./dist/configs/eslint/base.d.ts",
      "default": "./dist/configs/eslint/base.js"
    },
    "./eslint/node": {
      "types": "./dist/configs/eslint/node.d.ts",
      "default": "./dist/configs/eslint/node.js"
    },
    "./eslint/vue": {
      "types": "./dist/configs/eslint/vue.d.ts",
      "default": "./dist/configs/eslint/vue.js"
    },
    "./eslint/nuxt": {
      "types": "./dist/configs/eslint/nuxt.d.ts",
      "default": "./dist/configs/eslint/nuxt.js"
    },
    "./prettier": {
      "types": "./dist/prettier.config.d.ts",
      "default": "./dist/prettier.config.js"
    },
    "./commitlint": {
      "types": "./dist/commitlint.config.d.ts",
      "default": "./dist/commitlint.config.js"
    },
    "./release": {
      "types": "./dist/release.config.d.ts",
      "default": "./dist/release.config.js"
    },
    "./tsconfig": "./tsconfig.base.json"
  },
  "keywords": [
    "eslint",
    "prettier",
    "commitlint",
    "semantic-release",
    "formatting",
    "linting",
    "typescript"
  ],
  "author": "Valentin Fourny",
  "license": "ISC",
  "dependencies": {
    "@commitlint/config-angular": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.50.0"
  },
  "devDependencies": {
    "@commitlint/types": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^25.0.3",
    "@vitest/ui": "^4.0.16",
    "commitlint": "^20.2.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue-eslint-parser": "^10.2.0"
  },
  "peerDependencies": {
    "commitlint": "^19.8.0 || ^20.1.0",
    "eslint": "^9.3.0",
    "prettier": "^3.2.5",
    "semantic-release": "^24.0.0 || ^25.0.0",
    "typescript": "^5.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vfourny/node-toolkit.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20.13 <25",
    "npm": ">= 10"
  }
}
